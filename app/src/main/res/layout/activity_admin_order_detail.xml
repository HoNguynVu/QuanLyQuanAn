<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F7FA">
    
    <!-- Header -->
    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="24dp"
        android:paddingHorizontal="20dp"
        android:text="Chi Tiết Đơn Hàng"
        android:textColor="#1A365D"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />    <!-- Thông tin đơn hàng -->
    <TextView
        android:id="@+id/txt_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: #12345"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#2D3748"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="1dp" />

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng: "
        android:textSize="15sp"
        android:textColor="#4A5568"
        android:layout_marginBottom="8dp"
        android:padding="14dp"
        android:background="@android:color/white"
        android:elevation="1dp" />
    
    <TextView
        android:id="@+id/txt_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tạo: "
        android:textSize="15sp"
        android:textColor="#4A5568"
        android:layout_marginBottom="8dp"
        android:padding="14dp"
        android:background="@android:color/white"
        android:elevation="1dp" />

    <TextView
        android:id="@+id/txt_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái:"
        android:textColor="#38A169"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="16dp"
        android:padding="14dp"
        android:background="#F0FFF4"
        android:elevation="1dp" />    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        android:layout_marginVertical="16dp" />

    <!-- Danh sách món (ListView) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách món:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#2D3748"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="1dp" />

    <ListView
        android:id="@+id/lv_order_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#F7FAFC"
        android:dividerHeight="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        android:layout_marginBottom="16dp" />
    
    <!-- Tổng tiền -->
    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 250.000đ"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#E53E3E"
        android:gravity="end"
        android:padding="16dp"
        android:background="#FFF5F5"
        android:elevation="1dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#4299E1"
        android:elevation="2dp"
        android:padding="16dp" />
</LinearLayout>
