<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F7FA">      <!-- Header -->
    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:paddingHorizontal="16dp"
        android:text="Chi Tiết Đơn Hàng"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#3182CE"
        android:elevation="2dp"
        android:layout_marginBottom="12dp"
        android:clickable="false"
        android:focusable="false" />    <!-- Thông tin đơn hàng -->
    <TextView
        android:id="@+id/txt_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1A202C"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng: "
        android:textSize="16sp"
        android:textColor="#2D3748"
        android:layout_marginBottom="6dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/txt_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tạo: "
        android:textSize="16sp"
        android:textColor="#2D3748"
        android:layout_marginBottom="6dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/txt_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái:"
        android:textColor="#2F855A"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="#F0FFF4"
        android:elevation="1dp"
        android:clickable="false"
        android:focusable="false" /><View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        android:layout_marginVertical="12dp" />    <!-- Danh sách món (ListView) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách món:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#1A202C"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:clickable="false"
        android:focusable="false" />    <ListView
        android:id="@+id/lv_order_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#F7FAFC"
        android:dividerHeight="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="12dp"
        android:clickable="false"
        android:focusable="false" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        android:layout_marginBottom="12dp" />    <!-- Tổng tiền -->
    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#C53030"
        android:gravity="end"
        android:padding="12dp"
        android:background="#FED7D7"
        android:elevation="1dp"
        android:layout_marginBottom="12dp"
        android:clickable="false"
        android:focusable="false" />
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#3182CE"
        android:elevation="2dp" />
</LinearLayout>
