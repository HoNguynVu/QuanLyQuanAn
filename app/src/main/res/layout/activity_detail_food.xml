<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">        <!-- Food Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/img_food_detail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_background" />
        </androidx.cardview.widget.CardView>

        <!-- Food Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <!-- Food Name -->
                <TextView
                    android:id="@+id/txt_food_name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bún bò Huế"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <!-- Price with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/txt_food_price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.000đ"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#E53935"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Description Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/label_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_food_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Món ăn đặc trưng miền Trung với vị cay nồng, nước dùng đậm đà, nguyên liệu tươi ngon..."
                    android:textSize="15sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>        <!-- Reviews Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <!-- Reviews Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/txt_review_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đánh giá"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/txt_rating_avg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 ★"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <!-- Reviews RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="ifContentScrolls" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_review"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Đánh giá"
                android:background="@drawable/button_item_menu"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Quay lại"
                android:background="@drawable/button_item_cancel"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
