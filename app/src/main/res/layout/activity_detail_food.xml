<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/img_food_detail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Row: Tên món ăn -->
    <TextView
        android:id="@+id/label_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên món ăn:"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/img_food_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_food_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="@id/label_food_name"
        app:layout_constraintBottom_toBottomOf="@id/label_food_name"
        app:layout_constraintStart_toEndOf="@id/label_food_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Row: Giá -->
    <TextView
        android:id="@+id/label_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá:"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_food_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_food_price_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        app:layout_constraintTop_toTopOf="@id/label_food_price"
        app:layout_constraintBottom_toBottomOf="@id/label_food_price"
        app:layout_constraintStart_toEndOf="@id/label_food_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Row: Mô tả -->
    <TextView
        android:id="@+id/label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả:"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_food_price"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_food_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Món ăn đặc trưng miền Trung với vị cay nồng, nước dùng đậm đà, nguyên liệu tươi ngon..."
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_description"/>

    <!-- Đánh giá -->
    <TextView
        android:id="@+id/txt_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_food_description"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/list_reviews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt_review_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
