<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignUpActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANH EM RỌT"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản trên ứng dụng"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txt_email_sign_up"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_edit_text_log"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txt_name_sign_up"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_log"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/txt_email_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txt_phone_sign_up"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_log"
        android:hint="Số điện thoại"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/txt_name_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txt_date_birth_sign_up"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_log"
        android:hint="Ngày sinh (dd/MM/yy)"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/txt_phone_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mật khẩu -->
    <RelativeLayout
        android:id="@+id/layoutpass"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_date_birth_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/txt_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_text_log"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingEnd="50dp" />

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_closed" />
    </RelativeLayout>

    <!-- Xác nhận mật khẩu -->
    <RelativeLayout
        android:id="@+id/layoutconfirmpass"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/txt_confirm_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_text_log"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingEnd="50dp" />

        <ImageView
            android:id="@+id/iv_toggle_confirm_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye_closed" />
    </RelativeLayout>

    <!-- Nút đăng ký -->
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_sign_up"
        android:text="Tiếp tục"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/layoutconfirmpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btn_arrow_back"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_margin="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_button"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chevron_left"
        app:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
