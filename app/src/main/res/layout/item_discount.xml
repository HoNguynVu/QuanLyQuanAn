<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discount_code_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Mã giảm giá: ABC123"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_percent"
                app:tint="#FF5722" />

            <TextView
                android:id="@+id/txtPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Giảm: 10%"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_money"
                app:tint="#4CAF50" />

            <TextView
                android:id="@+id/txtMaxAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Tối đa: 50,000 VND"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar"
                app:tint="#2196F3" />

            <TextView
                android:id="@+id/txtValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Từ: 2024-06-01 đến 2024-06-30"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="#E8F5E9"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Trạng thái: Hoạt động"
            android:textColor="#4CAF50"
            android:textStyle="bold" />

        <!-- Nút chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="18dp"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:backgroundTint="#0288D1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Xóa"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconSize="18dp"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:backgroundTint="#D32F2F"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
