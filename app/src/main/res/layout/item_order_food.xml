<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ảnh món ăn -->
        <ImageView
            android:id="@+id/img_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Ảnh món ăn"
            android:background="@drawable/image_background"
            android:src="@drawable/ic_launcher_background"
            android:clipToOutline="true" />

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/txt_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món: Cá chiên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txt_food_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 120.000đ"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txt_food_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú: Không cay"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
